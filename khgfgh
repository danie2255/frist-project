let bg, plane, frizzle;
let frizzleX;
let bird1, bird, goldbar, silbar, satellite, friwithbasket, airballon;
let planeX;

function preload() {
  bg = loadImage('bg.jpg');
  plane = loadImage('airplane.png');
  frizzle = loadImage('Frizzle.png');
  bird1 = loadImage('bird.png');
  bird = loadImage('bird2.png');
  goldbar = loadImage('goldbar.png');
  silbar = loadImage('silverbar.png');
  satellite = loadImage('satellite.png');
  friwithbasket = loadImage('Frizzle with wicker basket and slingshot.png');
  airballon = loadImage('hot air balloon.png');
}

function setup() {
  createCanvas(windowWidth, windowHeight);
  frizzleX = width / 2;
  planeX = width;
}

function draw() {
  image(bg, 0, -5, width, height);  //heigh of the img


	

  planeX -= 2;
  if (planeX < -plane.width * 0.4) planeX = width;
  let planeY = 60; //hei
  let pScale = 0.4;
  image(plane, planeX, planeY, plane.width * pScale, plane.height * pScale);

  // Frizzle display
  let fScale = 0.5;
  let fW = frizzle.width * fScale;
  let fH = frizzle.height * fScale;
  image(frizzle, frizzleX - fW / 2, height - fH, fW, fH);

  moveFrizzle();
}


